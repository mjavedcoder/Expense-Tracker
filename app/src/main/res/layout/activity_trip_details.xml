<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trips.TripDetailsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="12dp"
        android:text="Trip Details"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Name: John Doe" />

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Destination: Denmark" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDestination"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Date: 06-03-2022" />

    <TextView
        android:id="@+id/titleRequiresAssessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDate"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Requires Assessment: Yes" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleRequiresAssessment"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"
        tools:text="Description: Trip to meet Team XYZ"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewDaysSpent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescription"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Days Spent: 5" />

    <Button
        android:id="@+id/btnEditTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDaysSpent"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:text="Edit Details" />

    <Button
        android:id="@+id/btnDeleteTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEditTrip"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:text="Delete Trip" />

    <Button
        android:id="@+id/btnAllExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDeleteTrip"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:text="Show All Expenses" />

</RelativeLayout>